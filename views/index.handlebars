<div class="row small-up-2 medium-up-3 large-up-4">
	{{#if projects}}
		{{#each projects}}
			<div class="column portfolio_item">
                {{#if image}}
                    <img class="thumbnail" src="/avatar/{{image}}"/>
                {{else}}
                    <img class="thumbnail" src="/images/no_image.png"/>
                {{/if}}
				<h5 class="text-center">{{title}}</h5>
				<p class="text-center show">
					<a href="details/{{id}}">Show More</a>
				</p>
			</div>
		{{/each}}
	{{else}}
		<div class="column"><p>No projects.</p></div>
	{{/if}}
</div>